---
pageable: true
per_page: 10
---

<header class="journal-bg">
  </header>

  <div class="journal-container">  
  	<nav>
  	  <ul>
  	  	<li><a href="/">Home</a></li> 
  	  	<li> <%= link_to "About", "/about.html" %>  	  		  
      </ul>
    </nav>
 <div id="post-container">
    <h1>My Journal</h1>
    <h3>Here to document my progress with Web Development, and all other interesting experiences worth sharing.</h3>

    <ul>
    <% page_articles.each_with_index do |article, i| %>
      <li>
        <h2><%= link_to article.title, article %></h2>
        <div class="article-details">
          <div class="article-date">
            <%= article.date.strftime('%Y-%m-%d') %>
          </div>                  
        </div>
      </li>
    <% end %>
  </ul>
  

  <% if paginate && (prev_page || next_page) %>
    
    <p>
    <% if prev_page %>
      <%= link_to '<i class="fa fa-angle-double-left"></i> previous',
          prev_page, :class => "pagination" %>
    <% end %>
    <% if next_page %>
      <%= link_to 'next <i class="fa fa-angle-double-right"></i>',
          next_page, :class => "pagination" %>
    <% end %>
    </p>

    <p>Page <%= page_number %> of <%= num_pages %></p>
  <% end %> 
  </div>
</div>

<%= partial "partials/footer"%> 