<p>Today is the start of something beautiful.</p>

<section id="recent-posts">
  <h2>
  	<ul>
  	  <% blog.articles[0...5].each do |article| %>
  	  <li>
  	  	<h3><%= link_to article.title, article %></h3>
  	  	  <div class="article-date"
  	  	    <%= article.date.strftime('%Y-%m-%d')%> 
  	  	</div>
  	  </li>
  	  <% end %> 
  	</ul>
  </h2>
</section>
